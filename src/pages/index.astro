---
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import PostPreview from '../components/PostPreview.astro';
import Pagination from '../components/Pagination.astro';

// page
let title = `Shreesh`;
let description = 'An example blog on Astro';

// collection
// note: we want to show first 3 blog posts here, but we donâ€™t want to paginate at /1, /2, /3, etc.
// so we show a preview of blog posts here, but actually paginate from $blog.astro

let allPosts = Astro.fetchContent('./blog/*.md');
allPosts.sort((a, b) => new Date(b.date) - new Date(a.date));
let firstPage = allPosts.slice(0, 3);
---

<html dir="ltr" lang="en">
  <head>
    <title>{title}</title>
    <MainHead
      title={title}
      description={description}
      image={firstPage[0].image}
      canonicalURL={Astro.request.canonicalURL.href}
    />
  </head>

  <body>
    <Nav />

    <main class="wrapper">
      {firstPage.map((blogpost) => <PostPreview blog={blogpost} />)}
    </main>

    <footer>
      <Pagination nextUrl="/blog/2" />
    </footer>
  </body>
</html>
